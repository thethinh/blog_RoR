
<% if @reaction.errors.any? %>
  alert("Đã xảy ra lỗi , vui lòng thử lại sau !")
<% else %>
  $("#react-cmt<%= @reaction.reaction_refs_id %>").text("Like");
  document.getElementById("react-cmt<%= @reaction.reaction_refs_id %>").classList.remove("<%= @reaction.reactions %>");
