<% if @reaction.errors.any? %>
  alert("Đã xảy ra lỗi , vui lòng thử lại sau !")
<% else %>
  $("#react-cmt<%= @reaction.comment_id %>").text("<%= @reaction.reactions %>");
  document.getElementById("react-cmt<%= @reaction.comment_id %>").className = "<%= @reaction.reactions %>";
  document.getElementById("react-cmt<%= @reaction.comment_id %>").href = "/reaction_comment?comment_id=<%=@reaction.comment_id%>&reaction=<%= @reaction.reactions %>"
<% end %>