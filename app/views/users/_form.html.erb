<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="login-wrap">
    <div class="login-html">
      <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"><%= yield(:title) %></label>
      <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Don't click here</label>
      <div class="login-form">
        <div class="sign-in-htm">
          <%= form_for(@user) do |f| %>
            <div class="group">
              <%= f.label :name, class: "label"  %>
              <%= f.text_field :name, class: 'input' %>
            </div>
            <div class="group">
              <%= f.label :email, class: "label" %>
              <%= f.email_field :email, class: 'input' %>
            </div>
            <div class="group">
              <%= f.label :password, class:"label" %>
              <%= f.password_field :password, class: 'input' %>
            </div>
            <div class="group">
              <%= f.label :password_confirmation, class:"label" %>
              <%= f.password_field :password_confirmation, class: 'input' %>
            </div>
            <div class="group">
              <input type="submit" class="button" value=<%= yield(:button_text) %>>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>



